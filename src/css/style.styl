





#play {
  background-color: #19420c;
}

#play:hover, #play:focus, #play:active {
  background-color: #286c14;
}

#pause {
  background-color: #4a1010;
}

#pause:hover, #pause:focus, #pause:active {
  background-color: #751a1a;
}

#restart {
  background-color: #0b303c;
}

#restart:hover, #restart:focus, #restart:active {
  background-color: #135267;
}

.hide {
  display: none !important;
}

@media (orientation : portrait) {

  .buttons {
    flex-direction: column;
  }

  .buttons div {
    padding: 5vh 1.5vw;
  }

  .title {
    font-size: 10vw;
  }

  .sub {
    display: none;
  }
}

@media (max-height : 150px) {
  .sub {
    display: none;
  }
}

#timerEdit {
  flex-grow: 1;
  display: flex;
  align-items: center;
}

#timerInput:focus {
  outline: none;
  border: white solid 3px;
}

#timerInput {
  border: white solid 1px;
  background-color: transparent;
  line-height: 1.6em;
  text-align: center;
  padding-top: 0.25em;
  width: 66vw;
  letter-spacing: 2vw;

  box-shadow: 0 0 0.2vw #fff,
    0 0 0.6vw #fff,
    0 0 1vw #fff,
    0 0 1.5vw #228DFF,
    0 0 2.5vw #228DFF,
    0 0 3vw #228DFF,
    0 0 4vw #228DFF,
    0 0 2vw #228DFF,
    inset 0 0 0.2vw #fff,
    inset 0 0 0.6vw #fff,
    inset 0 0 1vw #fff,
    inset 0 0 1.5vw #228DFF,
    inset 0 0 2.5vw #228DFF,
    inset 0 0 3vw #228DFF,
    inset 0 0 4vw #228DFF,
    inset 0 0 2vw #228DFF;
}

.hurry .digit{
  animation: hurry 1s step-start infinite;
}

.hurry .tick{
  animation: hurry 1s step-start infinite, ticker 1s infinite linear;
}

@keyframes hurry {
  50% {
    color: #fd9e9e;

    text-shadow: 0 0 0.2vw #fd9e9e,
      0 0 0.6vw #fd9e9e,
      0 0 1vw #fd9e9e,
      0 0 1.5vw #bb1f1f,
      0 0 2.5vw #bb1f1f,
      0 0 3vw #bb1f1f,
      0 0 4vw #bb1f1f,
      0 0 2vw #bb1f1f;
  }
}

.isElectron header {
  display: none;
}


.isWeb header {
  background-color: #0b303c;
  color: white;
  width: 100vw;
  text-align: center;
  font-size: 30px;
  padding: 15px 0px 10px;
  letter-spacing: 3px;
  text-shadow: 0 0 0.2vw #fff,
  0 0 0.6vw #fff,
  0 0 1vw #fff,
  0 0 1vw #228DFF,
  0 0 2vw #228DFF,
  0 0 2vw #228DFF,
  0 0 2vw #228DFF,
  0 0 2vw #228DFF;
}