{
  "name": "electron-timer-app",
  "productName": "Electron Timer",
  "version": "1.0.0",
  "description": "A simple clock made with electron",
  "main": "index.js",
  "repository": "git@github.com:BrOrlandi/electron-timer-app.git",
  "author": "BrOrlandi",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev" : "yarn watch-web & yarn dev-electron",
    "watch-web": "parcel watch ./src/index.html -d distweb --public-url ./",
    "build-web": "parcel build ./src/index.html -d distweb --public-url ./ ",
    "start": "electron .",
    "dev-electron": "NODE_ENV=development electron .",
    "lint": "eslint index.js ./src",
    "build-linux": "yarn build-web && electron-packager . 'Electron Timer' --overwrite --asar=true --platform=linux --arch=x64 --icon=src/assets/icon-1024.png --prune=true --out=dist",
    "package-debian": "electron-installer-debian --src 'dist/Electron Timer-linux-x64/' --arch amd64 --config debian.json",
    "build-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=src/assets/icon-1024.icns --prune=true --out=dist",
    "package-mac": "electron-installer-dmg ./dist/Electron\\ Timer-darwin-x64/Electron\\ Timer.app electron-timer-app"
  },
  "dependencies": {
    "electron": "^1.7.9",
    "electron-window-state": "^4.1.1",
    "moment": "^2.19.3",
    "vanilla-masker": "^1.2.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "babel-preset-env": "^1.6.1",
    "electron-installer-debian": "^0.7.1",
    "electron-installer-dmg": "^0.2.1",
    "electron-packager": "^10.1.0",
    "electron-reload": "^1.2.2",
    "eslint": "^4.15.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "parcel-bundler": "^1.5.0"
  }
}
